<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bricefamily.alex.time_tracker.CreateUserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Enter Your First Name"
            android:ems="10"
            android:textSize="12sp"
            android:id="@+id/editTextfirstemail"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textViewcreateaccount"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Enter Your Last Name"
            android:ems="10"
            android:textSize="12sp"
            android:id="@+id/editTextlastname"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/editTextfirstemail"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="E-mail Address"
            android:ems="10"
            android:textSize="12sp"
            android:id="@+id/editTextcreateemail"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/editTextlastname"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Enter Your Userame"
            android:ems="10"
            android:textSize="12sp"
            android:id="@+id/editTextcreatename"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/editTextcreateemail"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:ems="10"
            android:textSize="12sp"
            android:id="@+id/editTextcreatepassword"
            android:layout_below="@+id/editTextcreatename"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Repeat Password"
            android:inputType="textPassword"
            android:ems="10"
            android:textSize="12sp"
            android:id="@+id/editTextrepeatpassword"
            android:layout_below="@+id/editTextcreatepassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create New User"
            android:textSize="18sp"
            style="@style/buttondelete"
            android:backgroundTint="@color/cellSelected"
            android:id="@+id/buttoncreatenewuser"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/editTextrepeatpassword"
            android:layout_centerHorizontal="true"
            android:onClick="buttonCreateNewAccountPressed"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Please follow the instruction to create your account"
            android:id="@+id/textViewcreateaccount"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="or sign in"
            android:id="@+id/textViewgotologging"
            android:textColor="@color/cellSelected"
            android:layout_below="@+id/buttoncreatenewuser"
            android:layout_alignRight="@+id/buttoncreatenewuser"
            android:layout_alignEnd="@+id/buttoncreatenewuser"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:onClick="OnGotoLogin"/>
    </RelativeLayout>

</ScrollView>
