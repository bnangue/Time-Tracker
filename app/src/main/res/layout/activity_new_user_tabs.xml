<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bricefamily.alex.time_tracker.NewUserTabsActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.bricefamily.alex.time_tracker.SlidingTabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:background="@color/ColorPrimary"/>

        <include layout="@layout/content_new_user_tabs"/>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:id="@+id/drawerpane"
        android:gravity="start"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="120dp"
            android:id="@+id/profilebox"
            android:background="@color/cellSelected"
            android:padding="2dp"
            >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:civ_border="true"
                app:civ_border_width="4dp"
                app:civ_border_color="#ffff"
                android:id="@+id/avatarfriend"
                android:src="@mipmap/ic_launcher"
                android:layout_toLeftOf="@+id/linearLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:onClick="openProfileOverviewClick"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:orientation="vertical"
                android:id="@+id/linearLayout"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="42dp"
                android:layout_marginEnd="42dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/username"
                    android:text="Brice "
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/desc"
                    android:text="View Profile "
                    android:gravity="bottom"
                    android:layout_marginTop="4dp"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:textStyle="bold"/>


            </LinearLayout>

        </RelativeLayout>

        <ListView
            android:id="@+id/navlist"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/profilebox"
            android:choiceMode="singleChoice"
            android:background="#ffffffff">

        </ListView>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
